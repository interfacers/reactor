{
  "name": "@interfacers/reactor",
  "version": "0.2.0",
  "description": "generic react component library",
  "author": "ttraenkler",
  "contributors": [
    "ttraenkler",
    "alessiojorge"
  ],
  "license": "MIT",
  "repository": "interfacers/reactor",
  "main": "dist/index.js",
  "source": "src/index.tsx",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle-crl --no-compress --format cjs",
    "dev": "microbundle-crl watch --no-compress --format cjs",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "yarn lint:js && yarn lint:css",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && yarn install && yarn run build",
    "deploy": "gh-pages -d example/build",
    "lint:js": "eslint --cache --fix --ext .js,.ts,.tsx .",
    "lint:css": "stylelint './src/**/*.{css,scss}' --cache",
    "format": "prettier --write './src/**/*.{js,jsx,ts,tsx,css,md,json}'",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "peerDependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-optional-chaining": "^7.11.0",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@n8tb1t/use-scroll-position": "^1.0.47",
    "@storybook/addon-actions": "^6.0.22",
    "@storybook/addon-essentials": "^6.0.22",
    "@storybook/addon-links": "^6.0.22",
    "@storybook/preset-create-react-app": "^3.1.4",
    "@storybook/react": "^6.0.22",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^25.1.4",
    "@types/node": "^12.12.38",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.7",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "cross-env": "^7.0.2",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.21.1",
    "eslint-plugin-react-hooks": "^4.1.2",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^2.2.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.13",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "react": "16.13.1",
    "react-dom": "^16.13.1",
    "react-icons": "^3.11.0",
    "react-is": "^16.13.1",
    "react-merge-refs": "^1.1.0",
    "react-scripts": "^3.4.3",
    "react-spring": "^8.0.27",
    "react-use-measure": "^2.0.1",
    "stylelint": "^13.7.0",
    "stylelint-config-recommended": "^3.0.0",
    "typescript": "^4.0.3",
    "use-onclickoutside": "^0.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --cache --fix --max-warnings 0"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "files": [
    "dist"
  ],
  "jest": {
    "watchPathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
